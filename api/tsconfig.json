{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": ["**/*",
"start/**/*.ts",
    "app/**/*.ts",
    "config/**/*.ts",
    "database/**/*.ts",
    "start/**/*.ts",
    "providers/**/*.ts",
     "contracts/**/*.ts"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [  "@adonisjs/core",
    "@adonisjs/repl",
    "@japa/preset-adonis/build/adonis-typings",
    "@adonisjs/lucid"
    ]
  }
}
